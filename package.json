{
  "name": "saas-backend",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS backend with GraphQL and Cassandra",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "docs:graphql": "spectaql -c spectaql.config.yml",
    "docs:preview": "powershell -NoProfile -Command \"$p = if ($env:DOCS_PORT) { [int]$env:DOCS_PORT } else { 3333 }; npx --yes serve -s docs/graphql -l $p\"",
    "migrate": "ts-node src/common/database/migration-runner.ts",
    "seed": "ts-node src/common/database/seed/seed.ts"
  },
  "dependencies": {
    "@nestjs/apollo": "^12.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "apollo-server-express": "^3.12.0",
    "bcrypt": "^6.0.0",
    "cassandra-driver": "^4.6.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-voyager": "^1.0.0-rc.31",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "uuid": "11",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.7.3",
    "spectaql": "^3.0.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
